doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/public/stylesheets/style.css")
    title Registration
  body
    form(class="reg_auth_form" action="/register/reg" method="POST")
      img.className#IdName(src="/public/images/book.png" alt="Book Picture" class='pict')
      p(class='auth_title') Registration
      section
        input#login(name='name' type='text' placeholder='input login' required)
      section
        input#password(name='password' type='password' placeholder='input password' required)
      section
        input#conf_password(name='password1' type='password' placeholder='confirm password' required)
      button(type="submit" class='sign_in_button') Sign Up
    button(onclick="location = '/auth'" class='to_auth_button') Login